@model DoctorSkin.Models.Users
@{ 
    string formatBirth(string s)
    {
        string a = s.Split(' ')[0];
        string[] arr = a.Split('/');
        Array.Reverse(arr);
        string result = String.Join("-", arr);
        return result;
    }
}
<style>
    .active {
        background-color: #ebe6e6;
    }
</style>

<link href="~/Content/assets/css/profile.css" rel="stylesheet" />
<link href="~/Content/assets/css/index.css" rel="stylesheet" />

<section id="aa-promo">
    <div class="main">
        <div class="row">
            @{Html.RenderAction("NavBar", "Users");}
            <div class="col-md-8">
                <div class="thongtintaikhoan">
                    <h3 style="font-weight:bold">Thông tin tài khoản</h3>
                    <div class="form-group thongtinthe mt-5">
                        <label for="" style="font-weight:bold">Thông tin thẻ</label>
                        <select class="form-control" id="exampleFormControlSelect1">
                            <option>Tích lũy theo hạng thẻ</option>
                            <option>Tích lũy theo năm 2022</option>
                        </select>
                    </div>
                    <div class="tichluy-box">
                        <div class="circle-tichluy">
