                        </div>
                    </div>
                    <!-- THÔNG TIN CÁ NHÂN -->
                    <div class="form-group thongtinthe mt-5">
                        <label for="" style="font-weight:bold">Thông tin liên hệ</label>
                        <form action="/users/edit" method="post" id="profile-form">
                            <div>
                                <div class="row">
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label for="">Họ và tên</label>
                                            <input required type="text" class="form-control thongtincanhanh-input" id="" aria-describedby="" name="name" placeholder="" value="@Model.name">
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label for="">Năm sinh</label>
                                            <input required type="date" class="form-control thongtincanhanh-input" id="" aria-describedby="" placeholder="" name="birth" value="@formatBirth(Model.birth.ToString())">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="">Giới tính</label>
                                    <div>
                                        <input type="radio" name="gender" id="" value="Male" @Html.Encode(Model.gender.Equals("Male") ? "checked" : "")>Nam
                                        <input type="radio" name="gender" id="" value="Female" style="margin-left: 10px" @Html.Encode(Model.gender.Equals("Female") ? "checked" : "")>Nữ
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label for="">Email</label>
                                            <input type="Email" name="email" class="form-control thongtincanhanh-input" id="" aria-describedby="" placeholder="" value="@Model.email" disabled>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label for="">Điện thoại</label>
                                            <input type="tel" name="phone" class="form-control thongtincanhanh-input" id="" aria-describedby="" placeholder="" value='@(Model.phone == "LGfacebook" ? "" : formatBirth(Model.birth.ToString()))' maxlength="10" required pattern="[0]{1}[0-9]{4}[0-9]{5}">
                                        </div>
                                    </div>
                                </div>
                                <div class="btn-search" style="width: fit-content;margin:0 auto;margin-top: 10px;">
                                    <button type="submit" class="btn-search-click btn-search-click-listhotel" style="padding: 20px">Lưu</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/js/profile.js"></script>