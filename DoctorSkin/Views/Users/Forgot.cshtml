@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/assets/css/style1.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="~/Content/assets/css/loading.css" rel="stylesheet" />
    <link rel="shortcut icon" href="//o2skin.vn/wp-content/uploads/2021/09/favicon.ico" type="image/x-icon">
</head>

<body>
    <div>
        <img class="logoImg" src="https://o2skin.cdn.vccloud.vn/wp-content/uploads/2022/01/logo-o2skin.png"
             style="width:100%;object-fit:cover">
    </div>
    <div class="container" id="container">
        <div class="form-container sign-in-container">
            <form method="POST" action="/users/forgot" id="forgot-form">
                <h1 class="headerLogin">Quên Mật Khẩu?</h1>
                <input name="email" type="email" placeholder="Nhập Email" />
                <button id="submitForgot" type="submit" name="submitForgot">Lấy lại mật khẩu</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">

                <div class="overlay-panel overlay-right">
                    <h1 class="forgotPassTitle">Lấy lại mật khẩu</h1>
                    <p class="forgotPassIntroduction">Vui lòng nhập lại thông tin để chúng tôi có thể lấy lại mật khẩu cho bạn</p>


                </div>

            </div>
        </div>
    </div>

    <div id="loading">
        <img src="~/Content/assets/img/loading.svg" />
    </div>
    <script src="~/Scripts/js/user.js"></script>
    <script src="~/Scripts/js/loading.js"></script>

</body>
</html>
