@model List<DoctorSkin.Models.Products>
@foreach (var i in Model)
{
    <li>
        <figure>
            <a class="aa-product-img" href="#"><img src="@i.img" style="width:100%" alt="polo shirt img"></a>
            <a class="aa-add-card-btn" href="#"><span class="fa fa-shopping-cart"></span>Thêm vào giỏ hàng</a>
            <figcaption>
                <h4 class="aa-product-title"><a href="#">@i.namep</a></h4>
                <span class="aa-product-price">@i.newprice</span><span class="aa-product-price"><del>@i.oldprice</del></span>
                <p class="aa-product-descrip">@i.descr</p>
            </figcaption>
        </figure>
        <div class="aa-product-hvr-content">
            <a href="#" data-toggle="tooltip" data-placement="top" title="Add to Wishlist"><span class="fa fa-heart-o"></span></a>
            <a href="#" data-toggle="tooltip" data-placement="top" title="Compare"><span class="fa fa-exchange"></span></a>
            <a href="#" data-toggle2="tooltip" data-placement="top" title="Quick View" data-toggle="modal" data-target="#quick-view-modal"><span class="fa fa-search"></span></a>
        </div>
    </li>
}
