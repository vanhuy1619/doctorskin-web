@model PagedList.IPagedList<DoctorSkin.Models.ViewModel.UserFeedBackViewModel>
@using PagedList.Mvc;

<style>
    .pagination-container {
        display: flex;
        justify-content: center;
        margin: 0 auto
    }
</style>
@foreach (var i in Model)
{
    bool flag = false;
    string[] values = i.listImg.Split(',');
    <li>
        <div class="media">
            <div class="media-left">
                <a href="#">
                    <img class="media-object" src="@i.avau" alt="girl image" style="object-fit:cover;border-radius:50%">
                </a>
            </div>
            <div class="media-body">
                <h4 class="media-heading"><strong>@i.nameu</strong> - <span>@i.datefb</span></h4>
                <div class="aa-product-rating">
                    @if (flag == false)
                    {
                        for (var j = 0; j < i.staru; j++)
                        {
                            <span class="fa fa-star"></span>
                        }
                        for (var j = 0; j < (5 - i.staru); j++)
                        {
                            <span class="fa fa-star-o"></span>
                        }
                    }
                    @{ flag = true;}
                </div>
                <p>@i.cmt</p>
                @if (i.listImg != "")
                {
                    <div style="width:100%;display:flex;overflow:hidden;height:120px" id="list-imgfb">
                        @foreach (var j in values)
                        {
                            <div style="width:12%;height:100px;margin-right:6px">
                                <img style="width:100%;height:100%;object-fit:cover" src="@j">
                            </div>
                        }
                    </div>
                }
                <div style="padding-left:20px">
                    @Html.Action("getListRepFeedbacks", "Default", new { sttfb = i.sttfb })
                </div>
            </div>
        </div>
    </li>
}
<div style="display:flex">
    @Html.PagedListPager(Model, pagecmt => Url.Action("Details", "Products", new { pagecmt }))
</div>

