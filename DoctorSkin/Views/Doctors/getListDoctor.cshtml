@model List<DoctorSkin.Models.Doctors>
@foreach (var i in Model)
{
    <div class="col-sm-6 col-md-3">
        <div style="box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;height:550px;margin-bottom:20px;border-radius:6px">
            <div style="margin-bottom:8px">
                <img src="@i.ava_doc" style="width:100%;border-radius:6px" />
            </div>
            <div>
                <p style="font-weight: 500; color: #2360d6; text-align: center;font-size:20px">@i.namedoc</p>
            </div>
            <div>
                <p style="text-align: justify; font-size: 18px; padding: 0 10px">@i.infordoc</p>
            </div>
        </div>
    </div>
}

