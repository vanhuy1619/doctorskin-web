                                    </ul>
                                    <a class="aa-cartbox-checkout aa-primary-btn" href="checkout.html">Xem giỏ hàng</a>
                                </div>
                            </div>

                            <!-- / cart box -->
                            <!-- search box -->
                            <div class="aa-search-box">
                                <form action="">
                                    <input type="text" name="" id="" placeholder="Từ khóa tìm kiếm">
                                    <button type="submit"><span class="fa fa-search"></span></button>
                                </form>
                            </div>
                            <!-- / search box -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- / header bottom  -->
    </header>
