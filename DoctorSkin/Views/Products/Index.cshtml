<script type="text/javascript">
    function handleSelect(elm) {
        window.location = "?sortOrder=" + elm.value;
    }

    let url = window.location.pathname
    const myOptsBrand = Array.from(document.querySelectorAll('.choose-brand'));
    myOptsBrand.map(ele => {
        if (ele.getAttribute('href') == url)
            ele.classList.add('active-brand');
    });

    const myOptsType = Array.from(document.querySelectorAll('.choose-type'));
    myOptsType.map(ele => {
        if (ele.getAttribute('href') == url)
            ele.classList.add('active-brand');
    });
</script>